<%= form_for 'customer' do |f| %>
  <div>
  	<%= f.label "First Name" %>
    <%= f.text_field "first_name" %>
  </div>
  <div>
    <%= f.label "Last Name" %>
    <%= f.text_field "last_name" %>
  </div>
  <div>
  	<%= f.label "Zipcode" %>
    <%= f.text_field :zipcode %><br />
<%= f.label "Email" %>
<%= f.text_field :email %><br />
<%= f.label "Electric Company" %>
<%= f.text_field :electric %><br />
<%= f.label "Gas Company" %>
<%= f.text_field :nat_gas %><br />
<%= f.label 'Enter "LPG" if you use propane' %>
<%= f.text_field :propane %><br />
<%= f.label "Alternative Energy/Heating Source? (YES/NO)" %>
<%= f.text_field :alt_heat_fuel %>


 
<br />
<%= f.submit "Submit" %>


<% end %>